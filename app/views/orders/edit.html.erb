<div class='col-xs-12'>
  <div class='col-xs-3'>
  </div>
  <div class='col-xs-6 has-above-50'>
    <%= form_for(@order) do |f| %>  
    <div class="form-group">
      <%= f.label :Time%> 
      <%= f.select(:time, Location.find(session[:location_id]).time_frames.collect(&:time), {include_blank: false }) %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :location_id, :value => @location_id %>
      <%= f.label :Address1%><br />
      <%= f.text_field :address1, required: true, autofocus: true, class: 'form-control' %>
    </div>  
    <div class="form-group">
      <%= f.label :Address2%><br />
      <%= f.text_field :address2, autofocus: true, required: true, class: 'form-control' %>
    </div>  
    <div class="form-group">
      <%= f.label :Landmark %><br />
      <%= f.text_field :landmark, autofocus: true, required: true, class: 'form-control' %>
    </div> 
     <div class="form-group">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true, required: true, class: 'form-control' %>
    </div>   
    <%= f.hidden_field :summery, :value => @order.summery %>
    <%= f.hidden_field :price, :value => @order.price %>
    <%= f.hidden_field :user_id, :value => @order.user_id %>
    <%= f.hidden_field :status, :value => @order.status %>
    <%= f.submit "Update Order", :class => "btn btn-success btn-lg has-above block has-below" %>
    <% end %>
  </div>
  <div class='col-xs-3'>
  </div>
</div>