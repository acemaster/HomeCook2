<div class="col-xs-12 background_image">
  <div class="col-xs-3"></div>
  <div class="col-xs-7">
		<%= form_tag chefs_path, :method => 'get', id: 'search_form', class: "navbar-form navbar-left has-above-300" do %>
		  <div class="form-group">
		    <%= label_tag "Pune", nil, class: "btn btn-primary btn-lg form-control"%>
		  </div>
		  <div class="form-group">
		    <%#= autocomplete_field_tag 'location', '', autocomplete_location_chefs_path, class: "form-control width-400" %>
		    <%= select_tag "location", options_for_select(Location.pluck(:name)),  {onchange: "$('#search_form').submit();", :prompt => 'Select Location', class: "form-control width-400 larger"} %>
		  </div>
		  <%#= submit_tag "Search", :name => nil , class: "btn btn-primary btn-lg form-control form-control" %>
		<% end %>
	</div>
	<div class="col-xs-2">
	</div>
</div>